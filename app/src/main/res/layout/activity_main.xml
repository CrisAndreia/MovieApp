<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="154dp"
            android:layout_height="49dp"
            android:text="MoviesApp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.196"
            android:textSize="30sp" android:textAlignment="center" android:textColor="#2196F3"
            android:textStyle="bold" android:id="@+id/textView3"/>
    <TextView
            android:text="Digite o titulo do filme:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtDigite"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="68dp"
            app:layout_constraintVertical_bias="0.343" android:textSize="18sp"/>
    <TextView
            android:text="Sinopse:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtPlot"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintVertical_bias="0.63" android:textSize="18sp"/>
    <EditText
            android:layout_width="275dp"
            android:layout_height="60dp" android:id="@+id/inputMovie"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.414" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"
            android:inputType="text"/>
    <TextView
            android:layout_width="284dp"
            android:layout_height="61dp" android:id="@+id/result"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.723"
            android:inputType="none" app:layout_constraintHorizontal_bias="0.508"/>
    <Button
            android:text="Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btSearch"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold" android:textColor="#FFFFFF" android:backgroundTint="#2196F3"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.53"/>

</androidx.constraintlayout.widget.ConstraintLayout>